<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#44000000"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/iv_zonghe_item_tupian"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_player_danmaku_input_options_rl_checked"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_head_live"
               android:drawablePadding="4dp"
                android:gravity="center"


                android:text="观看人数"/>

            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_head_live"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"

                android:text="评论"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_head_live"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"


                android:text="时间"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_biaoti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""/>

    <TextView
        android:id="@+id/tv_leixing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="国产动画"/>


</LinearLayout>