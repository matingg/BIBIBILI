<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FB7299"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingTop="18dp"
        >

        <ImageView

            android:id="@+id/left_menu_iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:src="@drawable/bili_default_avatar"/>

        <ImageView
            android:id="@+id/left_menu_iv_time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:src="@drawable/bili_default_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="28dp"
            android:paddingLeft="16dp"
            android:text="点击头像登录"
            android:textColor="#ffffff"
            android:textSize="14sp"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/left_menu_title_ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/text_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        >

        <ImageView
            android:id="@+id/left_menu_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bili_default_avatar"/>

        <TextView
            android:id="@+id/left_menu_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="首页"
            android:textColor="@color/default_color"
            android:textSize="22sp"/>
    </LinearLayout>

</LinearLayout>