<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shenmequ"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什么区"
            android:drawableLeft="@drawable/bangumi_follow_ic_recommend"/>

        <TextView
            android:id="@+id/jinqukankan"
            android:background="#44000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进去看看"
            android:drawableRight="@drawable/bangumi_follow_ic_recommend"/>


    </LinearLayout>

    <GridView
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:id="@+id/gridviewrecyl"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:numColumns="2"
        ></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gengduo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多什么"
            android:drawableLeft="@drawable/bangumi_follow_ic_recommend"/>

        <TextView
            android:id="@+id/dongtai"
            android:background="#44000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态 点击刷新"
            android:drawableRight="@drawable/bangumi_follow_ic_recommend"/>


    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_gravity="center_horizontal"
        app:indicator_height="5dp"
        app:indicator_width="5dp"
        android:background="@drawable/no_banner"
        app:image_scale_type="fit_xy"
        android:layout_width="match_parent"
        android:layout_height="150dp"></com.youth.banner.Banner>

</LinearLayout>