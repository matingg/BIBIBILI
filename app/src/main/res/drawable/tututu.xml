<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="100dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#4ff"
        android:startColor="#fff"
        android:endColor="#0ff"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />

    <stroke
        android:width="3dp"
        android:color="#8fff87"
        />
</shape>